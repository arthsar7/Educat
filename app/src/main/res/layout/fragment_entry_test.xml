<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.student.detected.educator.ui.fragments.EntryTestFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_bg__authentication_ek2_shape">

        <TextView
            android:id="@+id/question"
            android:layout_width="330dp"
            android:layout_height="154dp"
            android:layout_marginTop="144dp"
            android:fontFamily="@font/inter"
            android:text="Question"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Description"
            android:textSize="30sp"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/varC"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/inter"
            android:text="c)"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/varB"
            app:layout_constraintTop_toBottomOf="@+id/varB" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@color/purple_500"
            android:id="@+id/varA"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/inter"
            android:text="a)"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/varB"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/purple_700"
            android:fontFamily="@font/inter"
            android:text="b)"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/varA"
            app:layout_constraintTop_toBottomOf="@+id/varA" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="209dp"
            android:layout_height="247dp"
            android:layout_marginTop="44dp"
            android:src="@drawable/hello_kitten"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.802"
            app:layout_constraintStart_toEndOf="@+id/varB"
            app:layout_constraintTop_toBottomOf="@+id/question" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>